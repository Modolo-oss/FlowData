{
  "name": "flowdata-studio",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm --prefix backend install && npm --prefix frontend install",
    "dev:backend": "npm --prefix backend run dev:all",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:all": "concurrently -n BACKEND,FRONTEND -c blue,orange \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:workers": "powershell -ExecutionPolicy Bypass -File ./scripts/start-workers.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

